<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>


<form class="form-horizontal">
  <%= form_for(Message.new) do |f|  %>
	<div class="form-group">
		<label class="col-sm-1 control-label">名前</label>
		<div class="col-sm-2">  
        <%= f.text_area :name , :class => "form-control", :placeholder =>"名前入力欄" %>
    </div>
		<label class="col-sm-2 control-label">テキスト</label>
		<div class="col-sm-5">
      <%= f.text_area :body , :class => "form-control", :placeholder =>"テキスト入力欄" %>
    </div>
      <div class="col-sm-offset-1 col-sm-1">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <% end %>
</form>


