<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new, html: {class: "form-horizontal"})  do |f|  %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
    <% end %>
	<div class="form-group">
		<label class="col-sm-2 control-label">名前</label>
		  <div class="col-sm-3">  
        <%= f.text_field :name , :class => "form-control", :placeholder =>"名前入力欄" %>
      </div>
		<label class="col-sm-3 control-label">テキスト</label>
		  <div class="col-sm-4">
        <%= f.text_area :body , :class => "form-control", :placeholder =>"テキスト入力欄" %>
      </div>
  </div>    
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-sm btn-primary" %>
      </div>
  </div>
<% end %>


